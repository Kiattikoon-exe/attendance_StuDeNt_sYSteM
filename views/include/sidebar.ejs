<style>
      body, html {
            height: 100%;
            margin: 0;
            overflow-x: hidden;
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
        }

        .sidebar .nav-link {
            color: #333;
        }

        .sidebar .nav-link:hover {
            background-color: #e9ecef;
        }

        .sidebar .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Responsive adjustments for small devices (mobile) */
        @media (max-width: 767.98px) {
            .sidebar {
                width: 100%; /* Full width on mobile */
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
                padding: 15px;
            }

            /* Adjust content area */
            .homepage-container {
                padding: 10px;
            }

            /* Reduce the font-size for smaller screens */
            h1 {
                font-size: 1.5rem;
            }

            .homepage-container p {
                font-size: 1rem;
            }
        }

        /* For tablets */
        @media (min-width: 768px) and (max-width: 1199.98px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 200px;
            }

            .homepage-container {
                padding: 20px;
            }
        }

        /* For large devices (PC) */
        @media (min-width: 1200px) {
            .sidebar {
                width: 250px;
            }

            .main-content {
                margin-left: 250px;
            }

            .homepage-container {
                padding: 30px;
            }
        }
</style>

